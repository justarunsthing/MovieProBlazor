<!-- Route parameter -->
@page "/movie-details/{movieId:int}"

@inject TmdbService tmdbService
@inject IJSRuntime JS

@if (movie != null)
{
    <PageTitle>Movie Details</PageTitle>
}

<div class="container-fluid p-0">
    @if (movie == null)
    {
        <div class="py-5 justify-content-center align-items-center">
            @if (isLoading)
            {
                <h2 class="text-muted">
                    Loading movie details...
                </h2>
            }
            else
            {
                <h2 class="text-muted">
                    The requested movie could not be found
                </h2>
            }
        </div>
    }
    else
    {
        <div id="movie-details" style="background: url(@movie.BackdropPath)">
            <div id="movie-wrapper">
                <div class="container-xxl py-3">
                    <div class="row">
                        <div class="col-12 col-md-4 col-xl-3 text-center text-md-start mb-3">
                            <img id="movie-poster" class="img-fluid" src="@movie.PosterPath" alt="Movie Poster" />
                        </div>
                        <div class="col-12 col-md-8 col-xl-9">
                            <h3 class="display-6 fw-bold mb-0">
                                @movie.Title
                            </h3>
                            <div class="lead mb-3">
                                @movie.Tagline
                            </div>
                            <div class="hstack gap-2">
                                @{
                                    bool dateParsed = DateTime.TryParse(movie.ReleaseDate, out DateTime releaseDate);
                                }

                                @if (dateParsed)
                                {
                                    <span>
                                        @releaseDate.ToString("MMMM dd, yyyy") |
                                    </span>
                                }

                                <span>
                                    @{
                                        int hours = movie.Runtime / 60;
                                        int minutes = movie.Runtime % 60;
                                    }

                                    @hours hour(s) @minutes minute
                                </span>
                            </div>
                            <div class="hstack gap-2 my-2">
                                @foreach (var genre in movie.Genres)
                                {
                                    <span class="badge text-bg-primary">
                                        @genre.Name
                                    </span>
                                }
                            </div>
                            <h5 class="lead fw-bold pt-3 mt-3">
                                Overview
                            </h5>
                            <p>
                                @movie.Overview
                            </p>
                            <div>
                                <span id="movie-rating">
                                    User Score: @((movie.VoteAverage * 10).ToString("F2"))%
                                </span>
                            </div>

                            @if (!string.IsNullOrEmpty(movieTrailer?.Key))
                            {
                                <div id="btn-trailer" class="mt-3">
                                    <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#trailer-modal">
                                        <i class="bi bi-play"></i>
                                        Watch Trailer
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-xl py-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        Top Billed Cast
                    </h3>
                    <ActorSwiper Casts="casts" />
                </div>
            </div>
        </div>
    }
</div>

<!-- Trailer Modal -->
<div id="trailer-modal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content modal-background">
            <div class="modal-header">
                <h5 id="modal-title" class="modal-title">
                    @(movie?.Title ?? "Movie Trailer")
                </h5>
                <button type="button" class="ms-auto" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="ratio ratio-16x9">
                    <iframe id="movie-trailer" src="" allowfullscreen>

                    </iframe>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-warning ms-auto" data-bs-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int MovieId { get; set; }

    private MovieDetails? movie;
    private Video? movieTrailer;
    private List<Cast> casts = [];
    private bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            isLoading = true;
            movie = await tmdbService.GetMovieDetailsAsync(MovieId);
            movieTrailer = await tmdbService.GetMovieTrailerAsync(MovieId);

            var credits = await tmdbService.GetMovieCreditsAsync(MovieId);
            casts = credits.Casts; // .Take(10).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    // After everything is rendered, run this
    protected override async Task OnAfterRenderAsync(bool isFirstRender)
    {
        // Import function 
        await using var jsModule = await JS.InvokeAsync<IJSObjectReference>("import", "/Components/Pages/MovieById.razor.js");

        if (movieTrailer != null)
        {
            string trailerUrl = $"https://www.youtube.com/embed/{movieTrailer.Key}";
            await jsModule.InvokeVoidAsync("initVideoPlayer", trailerUrl);
        }
        else
        {
            await jsModule.InvokeVoidAsync("initVideoPlayer", string.Empty);
        }
    }
}