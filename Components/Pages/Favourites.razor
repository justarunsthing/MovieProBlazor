@page "/favourites"

@inject FavouritesService favouritesService

<PageTitle>Favourites</PageTitle>

<div class="container-xxl py-3">
    <h1>
        <i class="bi bi-heart-fill text-danger"></i>
        Favourites
    </h1>
    <p class="lead italic">
        Movies that you have marked as your favourites
    </p>

    @if (favouriteMovies == null)
    {
        <div class="d-flex justify-content-center align-items-center">
            @if (isLoading)
            {
                <h2 class="text-muted">Loading Favourite Movies...</h2>
            }
            else
            {
                <h2 class="text-danger">Failed to load Favourite Movies</h2>
            }
        </div>
    }
    else
    {
        <div class="row g-3 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
            @foreach (var movie in favouriteMovies)
            {
                <div class="col">
                    <MovieCard Movie="movie" />
                </div>
            }
        </div>
    }
</div>

@code {
    List<Movie> favouriteMovies = [];
    bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            isLoading = true;
            favouriteMovies = await favouritesService.GetFavouritesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }
}